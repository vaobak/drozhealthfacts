# Cloud Database Configuration for Affiliate System
# Copy this file to .env.local and fill in your actual values

# Frontend Configuration (for production)
REACT_APP_API_ENDPOINT=https://api.drozhealthfacts.com/api
REACT_APP_API_KEY=droz-health-facts-api-key-2026
REACT_APP_PROJECT_ID=droz-health-facts

# Feature Flags
REACT_APP_ENABLE_CLOUD_SYNC=false
REACT_APP_FALLBACK_TO_LOCAL=true
REACT_APP_SYNC_INTERVAL=300000

# Database Provider (for future API server deployment)
REACT_APP_DB_PROVIDER=localStorage

# Supabase Configuration (if using Supabase in future)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Firebase Configuration (if using Firebase in future)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id

# MongoDB Configuration (if using MongoDB Atlas in future)
REACT_APP_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database